<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/welcometext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/barlow_bold"
        android:text="Selamat datang di Revelipt, Aplikasi Rekognisi Plat Nomor!"
        android:textSize="20dp" />

    <!-- Container dengan background warna dan border radius -->
    <FrameLayout
        android:id="@+id/myContainer"
        android:layout_width="569dp"
        android:layout_height="219dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginStart="50dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/container_bg"
        android:elevation="0dp"
        android:outlineProvider="background"
        android:padding="0dp"
        android:radius="0dp">

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/barlow_bold"
            android:text="Mulai Rekognisi"
            android:textColor="#D4D4D4"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/cameraicon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_below="@id/text1"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="70dp"
            android:src="@drawable/camera_icon" />

        <TextView
            android:id="@+id/ambilfoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="72.5dp"
            android:fontFamily="@font/barlow_bold"
            android:text="Ambil Foto"
            android:textColor="#D4D4D4"
            android:textSize="20dp" />

        <ImageButton
            android:id="@+id/ambilfotobutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="230dp"
            android:layout_marginTop="60dp"
            android:background="#00FFFFFF"
            android:src="@drawable/arrow_button" />

        <ImageView
            android:id="@+id/galeri"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_below="@id/text1"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="150dp"
            android:src="@drawable/gallery_icon" />

        <TextView
            android:id="@+id/galeritext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="152.5dp"
            android:fontFamily="@font/barlow_bold"
            android:text="Pilih Dari Galeri"
            android:textColor="#D4D4D4"
            android:textSize="20dp" />

        <ImageButton
            android:id="@+id/galeributton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="230dp"
            android:layout_marginTop="140dp"
            android:background="#00FFFFFF"
            android:src="@drawable/arrow_button" />
    </FrameLayout>


</RelativeLayout>