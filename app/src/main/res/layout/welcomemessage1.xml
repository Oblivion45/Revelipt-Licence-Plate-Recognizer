<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2C2B34">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#2C2B34">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="352dp"
            android:layout_height="299dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:src="@drawable/scan_image" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/barlow_bold"
            android:text="Foto Plat Nomor yang tidak terlihat jelas "
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="336dp"
            android:layout_height="44dp"
            android:layout_gravity="start"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/barlow_regular"
            android:text="Untuk memperjelas plat nomor dan info mengenai plat nomor tersebut"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="50dp"
            android:layout_height="12dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="130dp"
            android:src="@drawable/firstpage" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
